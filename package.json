{
  "name": "deepdrama",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=deepdrama-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist --d1=deepdrama-production --local",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name deepdrama",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply deepdrama-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply deepdrama-production",
    "db:seed": "wrangler d1 execute deepdrama-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console": "wrangler d1 execute deepdrama-production --local",
    "parse-excel": "node scripts/parse-excel.js"
  },
  "dependencies": {
    "hono": "^4.11.1"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0",
    "xlsx": "^0.18.5"
  }
}
